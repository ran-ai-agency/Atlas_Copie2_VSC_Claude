# ===========================================
# ATLAS UI - Environment Configuration
# ===========================================

# --------------------------------------------
# App Configuration
# --------------------------------------------
HOST=0.0.0.0
PORT=3080
MONGO_URI=mongodb://mongodb:27017/atlas
DOMAIN_CLIENT=http://localhost:3080
DOMAIN_SERVER=http://localhost:3080

# App Title (shown in browser tab and header)
APP_TITLE=Atlas
CUSTOM_FOOTER=Ran.AI Agency - Atlas Business Intelligence

# --------------------------------------------
# Security & Authentication
# --------------------------------------------
# Generate with: openssl rand -hex 32
CREDS_KEY=your_32_char_credentials_key_here
CREDS_IV=your_16_char_iv_here
JWT_SECRET=your_jwt_secret_here_generate_random
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Allow registration (set to false for invite-only)
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false

# Session settings
SESSION_EXPIRY=1000 * 60 * 15
REFRESH_TOKEN_EXPIRY=(1000 * 60 * 60 * 24) * 7

# --------------------------------------------
# Claude / Anthropic API
# --------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Models to enable (Claude 3.5 Sonnet, Opus, Haiku)
ANTHROPIC_MODELS=claude-sonnet-4-20250514,claude-opus-4-20250514,claude-3-5-haiku-20241022

# Default model for new conversations
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514

# --------------------------------------------
# MCP (Model Context Protocol) - Notion
# --------------------------------------------
MCP_NOTION_ENABLED=true
MCP_NOTION_TOKEN=your_notion_integration_token_here

# --------------------------------------------
# MCP - Zoho CRM
# --------------------------------------------
MCP_ZOHO_CRM_ENABLED=true
MCP_ZOHO_CRM_URL=https://ranaiagencymcpserver-110002203871.zohomcp.ca/mcp/message
MCP_ZOHO_CRM_KEY=your_zoho_mcp_key_here

# --------------------------------------------
# MCP - Zoho Books
# --------------------------------------------
MCP_ZOHO_BOOKS_ENABLED=true
MCP_ZOHO_BOOKS_URL=https://zohobooks-110002203871.zohomcp.ca/mcp/message
MCP_ZOHO_BOOKS_KEY=your_zoho_books_mcp_key_here

# --------------------------------------------
# MCP - Zoho Mail
# --------------------------------------------
MCP_ZOHO_MAIL_ENABLED=true
MCP_ZOHO_MAIL_URL=https://zohomail-110002203871.zohomcp.ca/mcp/message
MCP_ZOHO_MAIL_KEY=your_zoho_mail_mcp_key_here

# --------------------------------------------
# Search (Meilisearch)
# --------------------------------------------
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=atlas_search_key_change_me
SEARCH=true

# --------------------------------------------
# File Uploads
# --------------------------------------------
ALLOW_FILE_UPLOAD=true
FILE_UPLOAD_LIMIT=10
FILE_SIZE_LIMIT=20

# --------------------------------------------
# Logging
# --------------------------------------------
DEBUG_LOGGING=false
DEBUG_CONSOLE=false

# --------------------------------------------
# Rate Limiting (requests per minute)
# --------------------------------------------
MESSAGE_RATE_LIMIT=50
MESSAGE_RATE_WINDOW=1

# --------------------------------------------
# UI Customization
# --------------------------------------------
# Hide model info from users
HIDE_MODEL_INFO=true

# Custom welcome message
WELCOME_MESSAGE=Bienvenue dans Atlas! Je suis votre assistant IA pour la gestion de Ran.AI Agency.
